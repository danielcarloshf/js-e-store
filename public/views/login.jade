extends layout

block content
  div(class="container")
    div(class="col-sm-6 col-sm-offset-3")
      h1(class="text-center"): span(class="fa fa-sign-in") Login
      if(message.length > 0)
        div(class="alert alert-danger") !{message}
      form(action="/login", method="post", class="form-horizontal")
        div(class="form-group")
          label(class="col-sm-2 control-label") Username
          div(class="col-sm-10")
            input(type="text", placeholder="Username", class="form-control", name="username")
        div(class="form-group")
          label(class="col-sm-2 control-label") Password
          div(class="col-sm-10")
            input(type="password", placeholder="Password", class="form-control", name="password")
        div(class="text-right")
          button(type="submit", class="btn btn-warning btn-lg") Login
      hr
      p(class="text-center")
        span Need an account?&nbsp;
        a(href="/signup") Signup
        span , or go&nbsp;
        a(href="/") back
        span .
      hr
